.swiper-wrap {
  /* margin-top: 20rpx; */
  margin: 0 30rpx 20rpx;
}

.t-swiper {
  height: 240px;
}

.t-image__swiper {
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
}

.phone-modal-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx 0;
  height: 50rpx;
}

.phone-modal-wrapper .modal-wrapper {
  display: flex;
}

.phone-modal-wrapper .modal-wrapper .tag {
  font-size: 12px;
  background: red;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.phone-modal-wrapper .icon-wrapper {
  display: flex;
}

.phone-modal-wrapper .icon-wrapper text {
  font-size: 14px;
  color: #999;
}

.search-wrapper {
  margin: 10rpx 30rpx 0;
}

.search-wrapper .t-search__input-container {
  /* border-radius: 32rpx !important; */
  /* height: 64rpx !important; */
  border: 1px solid #0052d9 !important;
  border-radius: 8rpx 0 0 8rpx !important;
}

.search-wrapper .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.search-button {
  width: 160rpx !important;
  border-radius: 0 8rpx 8rpx 0 !important;
}

.tabs-wrapper {
  margin: 0 30rpx;
}

/* .tabs-wrapper .t-tabs {
  background: #f5f5f5;
} */

.tabs-wrapper .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.tabs-wrapper .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.tabs-wrapper .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}
.tabs-wrapper .tab .order-nav-item.active {
  color: #fa550f !important;
}

.tabs-wrapper .tab .bottom-line {
  border-radius: 4rpx;
}

.tabs-wrapper .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.tabs-wrapper .t-class-item {
  color: #333333 !important;
  font-size: 32rpx;
}

.tabs-wrapper .t-class-track {
  background-color: #fa4126 !important;
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

/* .film-list-wrapper {
} */

.film-item {
  padding: 30rpx 30rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}

.film-icon-wrapper {
  width: 150rpx;
  margin-right: 10rpx;
}

.film-icon-wrapper .goods-img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
}
.film-icon-wrapper .goods-name {
  font-weight: bold;
  word-break: break-all;
  text-align: center;
  font-size: 14px;
}

.film-content {
  flex: 1;
}

.film-content .film-title {
  font-weight: bold;
  margin: 0 0 20rpx 0;
}

.film-content .phone-modal-list {
  display: flex;
  flex-wrap: wrap;
}

.film-content .phone-modal-list .modal {
  font-size: 12px;
  padding: 5rpx 10rpx;
  background: #f1eee9;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}
.film-content .phone-modal-list .modal.select {
  background: #fa4126;
  color: #fff;
}

.film-list-empty {
  text-align: center;
}

.film-list-empty .empty-class {
  width: 400rpx;
  height: 400rpx;
}
.film-list-empty .empty-tip {
  color: #999;
}
