.swiper-wrap {
  /* margin-top: 20rpx; */
  margin: 0 30rpx 20rpx;
}

.t-swiper {
  height: 240px;
}

.t-image__swiper {
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
}

.phone-modal-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 30rpx;
  /* height: 50rpx; */
}

.phone-modal-wrapper .modal-wrapper {
  display: flex;
}

.phone-modal-wrapper .modal-wrapper .tag {
  font-size: 12px;
  background: red;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.phone-modal-wrapper .icon-wrapper {
  display: flex;
}

.phone-modal-wrapper .icon-wrapper text {
  font-size: 14px;
  color: #999;
}

.search-wrapper {
  margin: 10rpx 30rpx 20rpx;
}

.search-wrapper .t-search__input-container {
  /* border-radius: 32rpx !important; */
  /* height: 64rpx !important; */
  border: 1px solid #0052d9 !important;
  border-radius: 8rpx 0 0 8rpx !important;
}

.search-wrapper .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.search-button {
  width: 160rpx !important;
  border-radius: 0 8rpx 8rpx 0 !important;
}

.tabs-wrapper {
  margin: 0 30rpx;
}

/* .tabs-wrapper .t-tabs {
  background: #f5f5f5;
} */

.tabs-wrapper .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.tabs-wrapper .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.tabs-wrapper .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}
.tabs-wrapper .tab .order-nav-item.active {
  color: #fa550f !important;
}

.tabs-wrapper .tab .bottom-line {
  border-radius: 4rpx;
}

.tabs-wrapper .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.tabs-wrapper .t-class-item {
  color: #333333 !important;
  font-size: 32rpx;
}

.tabs-wrapper .t-class-track {
  background-color: #fa4126 !important;
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

/* .film-list-wrapper {
} */

.film-item {
  padding: 30rpx 30rpx;
  display: flex;
  border-bottom: 1px solid #ccc;
}

.film-item:last-child {
  border-bottom: 0px;
}

.film-icon-wrapper {
  display: flex;
  align-items: center;
  width: 150rpx;
  margin-right: 40rpx;
}

.film-icon-wrapper .goods-img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
}
.film-icon-wrapper .goods-name {
  font-weight: bold;
  word-break: break-all;
  text-align: center;
  font-size: 14px;
  /* border: 1px solid #0052d9; */
  color: #fff;
  background: #ff5454;
  border-radius: 8rpx;
  padding: 8rpx;
}

.film-content {
  flex: 1;
}

.film-content .film-title {
  font-weight: bold;
  margin: 0 0 20rpx 0;
}

.film-content .phone-modal-list {
  display: flex;
  flex-wrap: wrap;
}

.film-content .phone-modal-list .modal {
  font-size: 12px;
  padding: 5rpx 10rpx;
  background: #f1eee9;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}
.film-content .phone-modal-list .modal.select {
  background: #fa4126;
  color: #fff;
}

.film-list-empty {
  text-align: center;
}

.film-list-empty .empty-class {
  width: 400rpx;
  height: 400rpx;
}
.film-list-empty .empty-tip {
  color: #999;
}

.search-cus-button {
  background: #0594fa !important;
  border-color: #0594fa !important;
}

.search-list-wrapper {
  margin: 0 30rpx;
}

.search-list-wrapper .search-name-item {
  font-size: 14px;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}

.search-list-wrapper .is-color {
  color: red;
}

.notice {
  display: flex;
  align-content: center;
  padding: 10rpx 25rpx;
  background: #f5f5f5;
  align-items: center;
  margin-bottom: 10rpx;
}

.sound-icon-wrapper {
  display: flex;
}

.sound-img {
  height: 40rpx;
  width: 78rpx;
  margin-right: 15rpx;
}

.voice {
  margin-right: 5rpx;
  margin-top: 2rpx;
  color: #fa6016;
}

.left-box {
  position: relative;
  display: flex;
  align-items: center;
  flex: 1;
  width: 400rpx;
}

.left-text {
  position: absolute;
  left: 0;
  width: 40rpx;
  height: 100%;
  background: linear-gradient(
    to left,
    rgba(241, 241, 241, 0),
    rgba(241, 241, 241, 1)
  );
  z-index: 99;
}

.right-text {
  position: absolute;
  right: -1rpx;
  width: 40rpx;
  height: 100%;
  background: linear-gradient(
    to left,
    rgba(241, 241, 241, 1),
    rgba(241, 241, 241, 0)
  );
  z-index: 99;
}

.content-box {
  overflow: hidden;
}

.content-text {
  color: #5e5e5e;
  white-space: nowrap;
  font-size: 30rpx;
}
